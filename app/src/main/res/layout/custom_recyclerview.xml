<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_height="wrap_content"
    android:layout_marginVertical="1dp"
    android:orientation="horizontal"
    android:layout_width="match_parent">


    <TextView
        android:id="@+id/custom_recyclerview_name"
        style="@style/text_monospace_20"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/gry"
        android:padding="3dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginHorizontal="2dp"
        android:id="@+id/custom_recyclerview_email"
        style="@style/text_monospace_20"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/gry"
        android:padding="3dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/custom_recyclerview_contact"
        style="@style/text_monospace_20"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/gry"
        android:padding="3dp"
        android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:background="@color/teal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/custom_recyclerview_delete"
                android:layout_width="20dp"
                android:src="@drawable/delete"
                android:layout_height="20dp"/>

            <ImageView
                android:gravity="center"
                android:id="@+id/custom_recyclerview_edit"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>

</LinearLayout>




















