<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JsonProfileActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/json_profile_name"
        style="@style/edit_monospace_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Name" />

    <EditText
        android:editable="false"
        android:id="@+id/json_profile_email"
        style="@style/edit_monospace_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Email Id"
        android:inputType="textEmailAddress" />

    <EditText
        android:editable="false"
        android:id="@+id/json_profile_contact"
        style="@style/edit_monospace_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Contact No."
        android:inputType="number"
        android:maxLength="10" />

    <EditText
        android:editable="false"
        android:id="@+id/json_profile_password"
        style="@style/edit_monospace_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="10" />

    <EditText

        android:id="@+id/json_profile_dob"
        style="@style/edit_monospace_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_calender_com"
        android:editable="false"
        android:hint="Date Of Birth" />

    <RadioGroup
        android:id="@+id/json_profile_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/json_profile_male"
            style="@style/radio_007"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Male" />

        <RadioButton
            android:id="@+id/json_profile_female"
            style="@style/radio_007"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Female" />

        <RadioButton
            android:id="@+id/json_profile_transgender"
            style="@style/radio_007"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transgender" />

    </RadioGroup>

    <Spinner
        android:id="@+id/json_profile_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/gry" />

    <Button
        android:id="@+id/json_profile_edit"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Edit Profile"
        style="@style/button_monospace_20"
        android:layout_width="150dp"
        android:layout_height="100dp"/>
    <Button
        android:visibility="gone"
        android:id="@+id/json_profile_submit"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Submit"
        style="@style/button_monospace_20"
        android:layout_width="150dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/json_profile_logout"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Logout"
        style="@style/button_monospace_20"
        android:layout_width="150dp"
        android:layout_height="100dp"/>

  </LinearLayout>