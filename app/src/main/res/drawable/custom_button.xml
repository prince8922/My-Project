<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true">
        <shape>
            <corners android:radius="50dp"
                android:bottomLeftRadius="50dp" android:topRightRadius="50dp"/>
            <solid android:color="@android:color/holo_blue_dark"/>

        </shape>
    </item>
    <item>
     <shape>
            <corners android:radius="50dp"/>
         <gradient android:startColor="@android:color/holo_blue_bright" android:endColor="@android:color/background_light" android:centerColor="@android:color/darker_gray" android:angle="180"/>

     </shape>
    </item>
</selector>